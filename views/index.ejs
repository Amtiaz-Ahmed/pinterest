<%include ./partials/header.ejs%>
    <div
        class="w-full h-screen bg-[url('https://images.unsplash.com/photo-1509343256512-d77a5cb3791b?q=80&w=1470&auto=format&fit=crop&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D')] bg-cover bg-center flex items-center justify-center">
        <div class="w-[30vw] h-[70vh] bg-zinc-100 px-20 py-8 rounded-md">
            <h1 class="text-3xl text-center font-semibold text-zinc-700 tracking-tighter leading-none">Welcome to
                Pinterest</h1>
                <% if (error && error.length > 0) { %>
                    <div class="error">
                        <%= error %>
                    </div>
                <% } %>
                
            <form action="/login" method="post">
                <input class="border-2 mt-5 bg-zinc-100 rounded-full block w-full px-3 py-2" type="text" name="username"
                    placeholder="username">
                <input class="border-2 mt-2 bg-zinc-100 rounded-full block w-full px-3 py-2" type="password"
                    name="password" placeholder="password">
                <a class="mt-2 inline-block font-semibold text-zinc-500" href="/forgot">Fogot Password</a>
                <input class="mt-2 rounded-full block w-full px-3 py-2 bg-red-600 rounded-full text-white" type="submit"
                name="submit" value="Login">
                <p class="text-xs font-semibold text-zinc-700 mt-5 w-3/4 mx-auto text-center">By continuing, you agree
                    to Pinterest's Terms of Service; Opens a new tab and acknowledge you've read our Privacy Policy</p>
                <a class="inline-block mt-7 font-semibold text-zinc-700 w-full text-center" href="/register">Dont Have a Account</a>
            </form>
        </div>

    </div>
    <%include ./partials/footer.ejs%>