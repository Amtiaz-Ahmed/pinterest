<%include ./partials/header.ejs%>
<div class="profile w-full min-h-screen bg-zinc-800 text-white pt-1">
    <div class="cards flex flex-wrap gap-10 px-10 mt-10">
        <% post.forEach(elem => { %>
        <div class="card">
            <div class="w-52 h-52 bg-zinc-200 rounded-lg overflow-hidden">
                <a href="/show?_id=<%=elem._id%>"><img class="w-full h-full object-cover" src="/images/uploads/<%= elem.image %>" alt=""></a>
            </div>  
            <h3 class="text-xl font-semibold mt-3"><%= elem.title %></h3>
            <h4 class="text-sm font-semibold mt-3"><%= elem.user.name %></h4>
        </div>
        <% }); %>
    </div>
</div>
<%include ./partials/footer.ejs%>